/ {
    // Activate ADJUST layer by pressing numarrow and code
    //conditional_layers {
    //     compatible = "zmk,conditional-layers";
    //     adjust_layer {
    //         if-layers = <NUMBER CODE>;
    //         then-layer = <ADJUST>;
    //     };
    //};
    
    behaviors {
        mo_tog: behavior_mo_tog {
            compatible = "zmk,behavior-hold-tap";
            label = "mo_tog";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&tog>;
        };
        td_base: td_base {
            compatible = "zmk,behavior-tap-dance";
            label = "td_base";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LCTRL>, <&to NUMBER>, <&to CODE>, <&to ADJUST>;
        };
        td_rshft: td_rshft {
            compatible = "zmk,behavior-tap-dance";
            label = "td_rshft";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp RSHFT>, <&to NUMBER>;
        };
        td_shftcaps: td_shftcaps {
            compatible = "zmk,behavior-tap-dance";
            label = "td_shftcaps";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LSHFT>, <&kp CAPS>;
        };
    };
  
    keymap {
        compatible = "zmk,keymap";
        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |   ESC   |  1  |  2  |  3  |  4  |  5  |                  |  6  |  7   |  8   |  9  |   0   |  BKSPC   |
// |   TAB   |  Q  |  W  |  E  |  R  |  T  |                  |  Y  |  U   |  I   |  O  |   P   |   DEL    |
// |SHFT/CAPS|  A  |  S  |  D  |  F  |  G  |                  |  H  |  J   |  K   |  L  |   ;   |   APOS   |
// |   CTRL  |  Z  |  X  |  C  |  V  |  B  |MUTE | |PLAY/PAUSE|  N  |  M   |  ,   |  .  |   /   |SHFT/Layer|
//                |NUMBER| CTRL| ALT |SPACE|ENTER| |BKSPC     |SPACE| CODE |NUMBER| DEL |
            bindings = <
&kp ESC      &kp N1 &kp N2      &kp N3    &kp N4   &kp N5                        &kp N6    &kp N7   &kp N8    &kp N9   &kp N0   &kp BSPC
&kp TAB      &kp Q  &kp W       &kp E     &kp R    &kp T                         &kp Y     &kp U    &kp I     &kp O    &kp P    &kp DEL
&td_shftcaps &kp A  &kp S       &kp D     &kp F    &kp G                         &kp H     &kp J    &kp K     &kp L    &kp SEMI &kp APOS
&td_base     &kp Z  &kp X       &kp C     &kp V    &kp B     &kp C_MUTE &kp C_PP &kp N     &kp M    &kp COMMA &kp DOT  &kp FSLH &td_rshft
                    &mo_tog 1 1 &kp LCTRL &kp LALT &kp SPACE &kp RET    &kp BSPC &kp SPACE &lt CODE PSCRN &lt NUMBER LGUI &kp DEL
            >;
            sensor-bindings = <&inc_dec_kp LEFT RIGHT &inc_dec_kp C_VOL_DN C_VOL_UP>;
        };
        number_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// |  BKSPC  | DEL  |  /  |  *  |  $  |(macro)|                |  ^  |   &  |  *   |  (  |   )   |  BKSPC  |
// |   TAB   |sel_up|  7  |  8  |  9  |  +  |                  |     |      |      |     |       |   DEL   |
// |SHFT/CAPS|sel_rt|  4  |  5  |  6  |  -  |                  |     |      |      |     |   ;:  |   '"    |
// |BaseLayer|sel_dn|  1  |  2  |  3  |  =  |MUTE | |PLAY/PAUSE|     |      |  ,   |  .  |   |   |NextLayer|
//                  |     |  0  |  .  |SPACE|ENTER| |  BKSPC   |SPACE| CODE |NUMBER| DEL |
            bindings = <
&kp BSPC &kp DEL &kp FSLH  &kp STAR &kp DLLR &paren                  &trans &trans &trans &trans &trans   &kp BSPC
&trans   &sel_up &kp N7    &kp N8   &kp N9   &kp PLUS                &none  &none  &none  &none  &none    &kp DEL
&trans   &sel_rt &kp N4    &kp N5   &kp N6   &kp MINUS               &none  &none  &none  &none  &trans   &trans
&to BASE &sel_dn &kp N1    &kp N2   &kp N3   &kp EQUAL &trans &trans &none  &none  &trans &trans &kp PIPE &to CODE
                 &trans    &kp N0   &kp DOT  &trans    &trans &trans &trans &lt NUMBER PSCRN &lt CODE LGUI &kp DEL
            >;
            sensor-bindings = <&inc_dec_kp LEFT RIGHT &inc_dec_kp UP DOWN>;
        };
        code_layer {
// ------------------------------------------------------------------------------------------------------------
// |  `      | .025 | .050 | .075 | 0.1  | 0.125 |                  |     |      |  σ   |  +  |  -  |  =  |
// |  ~      |      |   ^  |      |      |       |                  |     |      |  °   |  {  |  }  |  ±  |
// |SHFT/CAPS|  <-  |   v  |  ->  |      |       |                  |     |      |  π   |  [  |  ]  |  _  |
// |BaseLayer|      |      |      |      |       |MUTE | |PLAY/PAUSE|     |      |  µ   |  ε  |  \  |NextLayer|
//                  |      | CTRL | ALT  | SPACE |ENTER| |  BKSPC   |SPACE| CODE |NUMBER| DEL |
            bindings = <
&kp GRAVE &sw_025  &sw_050  &sw_075   &sw_100  &sw_125              &none  &none  &sym_sig  &kp PLUS &kp MINUS &kp EQUAL
&kp TILDE &none    &kp UP   &none     &none    &none                &none  &none  &sym_deg  &kp LBRC &kp RBRC  &sym_plusminus
&trans    &kp LEFT &kp DOWN &kp RIGHT &none    &none                &none  &none  &sym_pi   &kp LBKT &kp RBKT  &kp UNDER
&to BASE  &none    &none    &none     &none    &none  &trans &trans &none  &none  &sym_mu   &sym_eps &kp BSLH  &to ADJUST
                   &trans   &kp LCTRL &kp LALT &trans &trans &trans &trans &lt NUMBER PSCRN &lt CODE LGUI &kp DEL
            >;
            sensor-bindings = <&inc_dec_kp LEFT RIGHT &inc_dec_kp C_PREV C_NEXT>;
        };
// ------------------------------------------------------------------------------------------------------------
// |BTCLR    | BT1   | BT2   |  BT3  |  BT4  |  BT5  |                 |      |      |       |      |       |     |
// |EXTPWR   |RGB_HUI|RGB_SAI|RGB_BRI|RGB_EFF|       |                 |      |      |       |      |       |     |
// |         |RGB_HUD|RGB_SAD|RGB_BRD|RGB_TOG|       |                 |      |      |       |      |       |     |
// |BaseLayer|       |       |       |       |       |MUTE| |PLAY/PAUSE|      |      |       |      |       |     |
//                   |       |       |       |       |    | |          |      |      |       |      |
        Adjust_layer {
        bindings = <
&bt BT_CLR                      &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3     &bt BT_SEL 4                 &none &none  &none  &none &none &none
&ext_power EXT_POWER_TOGGLE_CMD &rgb_ug RGB_HUI &rgb_ug RGB_SAI &rgb_ug RGB_BRI &rgb_ug RGB_EFF  &none                        &none &none  &none  &none &none &none
&none                           &rgb_ug RGB_HUD &rgb_ug RGB_SAD &rgb_ug RGB_BRD &rgb_ug RGB_TOG  &none                        &none &none  &none  &none &none &none
&to BASE                        &none           &none           &none           &none            &none          &trans &trans &none &none  &none  &none &none &none
                                                &none           &none           &none            &none          &none  &none  &none &trans &trans &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp UP DOWN>;

        };
    };
};
